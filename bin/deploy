#!/bin/bash

./bin/helpers/message "DEPLOYMENT"

mkdir -p ~/.ssh
cat >> ~/.ssh/id_rsa << EOF
$UBERSPACE_SSH_KEY
EOF
chmod 0600 ~/.ssh/id_rsa
eval "$(ssh-agent -s)"
ssh-add ~/.ssh/id_rsa

if [ "$1" = "production" ]; then
	user="offenege"
	host="$user.kochab.uberspace.de"
elif [ "$1" = "staging" ]; then
	user="offenege"
	host="$user.kochab.uberspace.de"
fi

ssh-keyscan -H $host >> ~/.ssh/known_hosts
git push -f $user@$host:~/offene-gesellschaft.git HEAD:master
