.ideas
  = render 'shared/admin_tabs', active: :event_proposal

  = simple_form_for @event_proposal do |f|
    .row
      .col-xs-12
        .inputs

          = f.input :title,
                    readonly: true
          = f.input :subject,
                    readonly: true
          = f.input :organizer,
                    readonly: true
          = f.input :participants,
                    readonly: true
          = f.input :date,
                    readonly: true
          = f.input :venue,
                    readonly: true
          = f.input :symbol_for_open_society,
                    readonly: true

          / - if @event_proposal.logo_file_name?
          /   .image style="background-image: url(#{asset_url(@event_proposal.logo(:normal))});"
          / - else
          /   p
          /     = t('event_proposals.blank-slates.logo')
          / - if @event_proposal.picture_file_name?
          /   .image style="background-image: url(#{asset_url(@event_proposal.picture(:normal))});"
          / - else
          /   p
          /     = t('event_proposals.blank-slates.picture')

          = f.input :contact_person_forename,
                    readonly: true
          = f.input :contact_person_surname,
                    readonly: true
          = f.input :contact_person_mail,
                    readonly: true
          = f.input :contact_person_phone,
                    readonly: true
    .row.button-row
      .col-xs-12
        = render 'shared/button',
                 label: t('delete'),
                 icon: 'times',
                 confirm: t('confirm'),
                 method: 'delete',
                 href: event_proposal_path(@event_proposal) if @event_proposal.id
        /= render 'shared/button',
                 type: 'submit',
                 label: t('save'),
                 icon: 'check'
